
let newline = "
";

class TexDocument {
  init() => {
    this.preamble = "";
    this.blocks = [];
    this.rendered = nil;
  }

  call() => {
    this.rendered = this.render();
  }

  add(block) => this.blocks.push(block);

  renderBlocks() => join([block.tex() | block in this.blocks], newline + newline);

  render() => "#{this.preamble}
\begin{document}
  #{this.renderBlocks()}
\end{document}
  ";
}

let document = TexDocument();
