class AssertionFailure < Exception {}

let assert = (condition) => {
  if (!condition) { throw AssertionFailure; }
};

class Be {
  init(val) => {
    this.val = val;
  }

  true_() => {
    assert(this.va);
  }
  false_() => {
    assert(!this.val);
  }
}

class Eq {
  init(val) => {
    this.val = val;
  }
  call(val) => {
    assert(this.val == val);
  }
}

class To {
  init(val) => {
    this.be = Be(val);
    this.eq = Eq(val);
  }
}

class Expectation {
  init(val) => {
    this.to = To(val);
  }
}

let expect = (val) => {
  return Expectation(val);
};
