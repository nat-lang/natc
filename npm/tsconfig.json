{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "types": [
      "node",
    ],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types"
  },
  "include": [
    "lib/**/*",
    "src/**/*",
  ],
  "exclude": [
    "test.ts"
  ]
}